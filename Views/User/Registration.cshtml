@model TestOSKI.ViewModels.UserRegisterModel


<form asp-action="Registration" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Registration" />
        </div>
    </div>
</form>