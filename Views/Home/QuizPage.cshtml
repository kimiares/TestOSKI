@model TestOSKI.Models.Quiz

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QuizPage</title>
</head>
<body>

    <div class="container mt-sm-5 my-1">

        <hr />
        <div class="py-2 h5">
            <b>@Html.DisplayFor(model => model.Description)</b>
        </div>

    </div>
    <div class="d-flex align-items-center pt-3">
        <div> @Html.CheckBox("Condition", false, new { @id = "chkcondition" })<b>&nbsp;I agree to start</b> </div>
        <div class="ml-auto mr-sm-5"> <a class="btn btn-success" asp-action="TestPage" asp-controller="Home" asp-route-id="@Model.Id" onclick="javascript:return AcceptTermAndcondition();">Proceed</a> </div>
    </div>
      
</body>
</html>
<script language="javascript" src="http://code.jquery.com/jquery-1.11.1.js"></script>
<script language="javascript" type="text/javascript">
        function AcceptTermAndcondition() {

            if ($("#chkcondition").is(':checked')) {
                return true;
            }
            else {
                alert("Please accept term and condition");
                return false;
            }
        }
</script>